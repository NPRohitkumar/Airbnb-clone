<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="container">
        <form action="http://localhost:3000/listings/update/<%=singleList._id%>?_method=PATCH" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
            <div class="row">
                <div class="col-8 offset-2">
                    <h3>Fill the new details below</h3>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" value="<%=singleList.title%>" name="listing[title]" id="title" class="form-control" required>
                        <div class="invalid-feedback">Please enter the title</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="listing[description]" rows="5" cols="20" class="form-control" id="description" required><%=singleList.description%></textarea>
                        <div class="invalid-feedback">Please enter the description</div>
                    </div>

                    <div class="mb-3">
                        Original Image: <br>
                        <img style="border-radius: 5px;" src="<%=originalURL%>" alt="">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image:</label>
                        <input type="file" id="image" class="form-control"
                        name="listing[image]">
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" value="<%=singleList.price%>" name="listing[price]" class="form-control" id="price" required>
                        <div class="invalid-feedback">Please enter the price</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-lg-7">
                            <label for="location" class="form-label">Location:</label>
                            <input type="text" value="<%=singleList.location%>" name="listing[location]" class="form-control" id="location" required>
                            <div class="invalid-feedback">Please enter the location</div>
                        </div>

                        <div class="mb-3 col-lg-5">
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" value="<%=singleList.country%>" name="listing[country]" class="form-control" id="country" required>
                            <div class="invalid-feedback">Please enter the country</div>
                        </div>
                    </div>

                    <div class="mb-5">
                        <button class="btn submit-button">submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <script src="/js/script.js"></script>
</body>
