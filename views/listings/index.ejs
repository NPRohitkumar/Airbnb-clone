<% layout("/layouts/boilerplate.ejs") -%>
    <body>
        <div class="filters">
            <div class="filter">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mountain-sun"></i></div>
                <p>Mountain</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-mug-hot"></i></div>
                <p>Breakfast</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-umbrella-beach"></i></div>
                <p>Beach</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-tent"></i></div>
                <p>Camp</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-house-fire"></i></div>
                <p>Fire camp</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-house-signal"></i></div>
                <p>Wifi support</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-sailboat"></i></div>
                <p>Boating</p>
            </div>
            <div class="filter">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Pool</p>
            </div>
            <div class="tax-toggle">
                <div class="form-check form-switch form-check-reverse">
                    <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                    <label class="form-check-label" for="flexSwitchCheckReverse">
                        Display total after taxes
                    </label>
                </div>
            </div>
        </div>
        <div class="container container-xxl">
            <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xxl-4">
                <% for(list of allListings) { %>
                    <a href="/listings/<%=list._id%>" class="listing-link">
                        <div class="card home-card">
                            <img src="<%=list.image.url%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%=list.title%></b>
                                    <br>
                                    <%=list.location%> , <%=list.country%> 
                                    <br>&#8377;
                                    <b><%=list.price.toLocaleString("en-IN")%></b> 
                                    night &nbsp;<i class="tax-info">+18% GST</i>
                                </p>
                            </div>
                        </div>
                    </a>
                    <%}%>
            </div>
        </div>
        <br>
        <script src="/js/script.js"></script>
    </body>
